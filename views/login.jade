doctype
html
  head
    title Login Page
    link(rel='stylesheet',href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet',href='/stylesheets/style.css')
    script(src='/javascripts/external_scripts/jquery.min.js')
    script(src='/javascripts/external_scripts/bootstrap.min.js')
  body
    .container
      .row
        .col-md-4.col-md-offset-4
         .main-wrapp
          form.form-signin(,action="/login",method="post")
            .form-group
              input.form-control(type="email",name="email",placeholder='Your Email')
            .form-group
              input.form-control(type="password",name="password",placeholder='********')
            .form-group
              input.btn.btn-primary.clickx2-button(type="submit", value="Sign in")
              if err
                p #{err}
